<div class="container">
  <div class="row">
    {{!-- Devoured = false --}}
    <div class="col-md-6">
      <div class="row">
        <ul>
         {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
        </ul>
      </div>
    </div>
    {{!-- Devoured = true --}}
    <div class="col-md-6">
      <div class="row">
        <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>